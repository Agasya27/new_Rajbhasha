DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=rajbhasha_db

# OpenRouter (LLM) settings
# Get an API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# Default model; see https://openrouter.ai/models
OPENROUTER_MODEL=openai/gpt-4o
# Cap output tokens to avoid credit errors (adjust as needed)
OPENROUTER_MAX_TOKENS=512
# Optional ranking metadata
OPENROUTER_SITE_URL=
OPENROUTER_SITE_TITLE=
BASE_URL=http://localhost/rajbhasha_portal/

# OCR tool paths (optional overrides)
# If tools are not on PATH, set absolute paths here
OCR_TESSERACT_EXE=
OCR_PDFTOTEXT_EXE=
OCR_MAGICK_EXE=
# Point to the folder containing traineddata (e.g., C:\\Program Files\\Tesseract-OCR\\tessdata)
OCR_TESSDATA_PREFIX=

# OCR tuning
OCR_MAX_PAGES=5
OCR_DENSITY_DPI=300
